{
    "manifest_version": 3,
    "name": "Spotify Playlist Generator",
    "short_name": "Spotify Playlist Generator",
    "description": "Generates a playlist from songs in the user's library",
    "version": "1.0.0",
    "author": "@rimutaka",
    "minimum_chrome_version": "110",
    "offline_enabled": false,
    "action": {},
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    },
    "background": {
        "type": "module",
        "service_worker": "js/background.js"
    },
    "permissions": [
        "tabs",
        "alarms",
        "webRequest",
        "cookies",
        "scripting"
    ],
    "host_permissions": [
        "*://*.spotify.com/*",
        "*://*.spotify.com/*"
    ],
    "content_scripts": [
        {
            "run_at": "document_end",
            "all_frames": false,
            "matches": [
                "*://*.spotify.com/*"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "<all_urls>"
            ],
            "resources": [
                "js/wasm/wasm_mod.js",
                "js/wasm/wasm_mod_bg.wasm"
            ]
        }
    ]
}