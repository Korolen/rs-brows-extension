{
    "manifest_version": 3,
    "name": "Make Random Playlist",
    "short_name": "Spotty",
    "description": "Generates a playlist from songs in the user's library",
    "version": "1.0.0",
    "author": "@rimutaka",
    "minimum_chrome_version": "110",
    "offline_enabled": false,
    "action": {
        "default_title": "Replace all tracks with random selection from your library",
        "default_icon": {
            "19": "assets/toolbar_icon_19.png",
            "16": "assets/toolbar_icon_19.png",
            "32": "assets/toolbar_icon_19.png",
            "38": "assets/toolbar_icon_38.png"
        },
        "default_popup": "popup.html",
        "show_matches": [
            "*://open.spotify.com/playlist/*"
        ]
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    },
    "background": {
        "type": "module",
        "service_worker": "js/background.js"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "alarms",
        "webRequest",
        "cookies",
        "scripting",
        "declarativeContent"
    ],
    "host_permissions": [
        "*://*.spotify.com/*",
        "*://*.spotify.com/*"
    ],
    "content_scripts": [
        {
            "run_at": "document_end",
            "all_frames": false,
            "matches": [
                "*://open.spotify.com/playlist/*"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "<all_urls>"
            ],
            "resources": [
                "js/wasm/wasm_mod.js",
                "js/wasm/wasm_mod_bg.wasm"
            ]
        }
    ]
}